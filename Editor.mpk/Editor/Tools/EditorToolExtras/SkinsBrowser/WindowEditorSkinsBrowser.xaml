<core:BaseUserControlWithWindow
    x:Class="AtomicTorch.CBND.CoreMod.Editor.Tools.EditorToolExtras.SkinsBrowser.WindowEditorSkinsBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:core="clr-namespace:AtomicTorch.CBND.CoreMod.UI.Controls.Core;assembly=Core"
    xmlns:data="clr-namespace:AtomicTorch.CBND.CoreMod.Editor.Tools.EditorToolExtras.SkinsBrowser.Data"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance data:ViewModelWindowEditorSkinsBrowser, d:IsDesignTimeCreatable=True}">
    <core:BaseUserControlWithWindow.Resources>
        <Style x:Key="ItemsListBoxStyle"
               TargetType="ListBox"
               BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Margin" Value="0,5" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" MaxWidth="880" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Margin="0,10">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Rectangle Fill="{Binding Icon}"
                                       Width="110"
                                       Height="110"
                                       UseLayoutRounding="True"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch" />
                            <TextBlock Grid.Row="1"
                                       Text="{Binding SkinName}"
                                       Foreground="#FFE3E3E3"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,3,0,1" />
                            <TextBlock Grid.Row="2"
                                       Text="{Binding BaseItemName}"
                                       Foreground="#FFE3E3E3"
                                       FontSize="11"
                                       HorizontalAlignment="Center" />
                        </Grid>

                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Foreground" Value="{StaticResource BrushColor7}" />
                        <Setter Property="Margin" Value="2" />
                        <Setter Property="Focusable" Value="False" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Grid>
                                        <Border x:Name="Border"
                                                Background="Black">
                                            <ContentPresenter />
                                        </Border>

                                        <Border x:Name="BorderSelected"
                                                BorderBrush="{StaticResource BrushColor7}"
                                                BorderThickness="1.5"
                                                CornerRadius="3" />
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="BorderSelected" Property="Visibility"
                                                    Value="Collapsed" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </core:BaseUserControlWithWindow.Resources>

    <core:GameWindow x:Name="GameWindow"
                     Width="900"
                     Height="760"
                     FocusOnControl="{Binding ElementName=GameWindow}"
                     Padding="10,5"
                     ZIndexOffset="100000"
                     Background="Black"
                     CloseByEscapeKey="False">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox ItemsSource="{Binding AllItemsList}"
                     Style="{StaticResource ItemsListBoxStyle}" />

            <Button Grid.Row="1"
                    Content="Close"
                    Command="{Binding CommandClose}"
                    Focusable="False"
                    HorizontalAlignment="Right"
                    Margin="0,3,12,3" />
        </Grid>
    </core:GameWindow>
</core:BaseUserControlWithWindow>