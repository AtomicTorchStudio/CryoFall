                        <GradientStop Color="#FFA68A3E" Offset="0" />
                        <GradientStop Color="#FF6E5719" Offset="0.333" />
                    </GradientStopCollection>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="{x:Static loc:CoreStrings.MenuServers_ServerTag_Community_Title}"
                       Style="{StaticResource TextBlockTagStyle}" />
            <base:ToolTipServiceExtend.ToolTip>
                <TextBlock Text="{x:Static loc:CoreStrings.MenuServers_ServerTag_Community_Description}"
                           Style="{StaticResource TextBlockTagTooltipStyle}" />
            </base:ToolTipServiceExtend.ToolTip>
