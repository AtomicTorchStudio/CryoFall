<base:BaseUserControl
    x:Class="AtomicTorch.CBND.CoreMod.UI.Controls.Game.WorldObjects.PowerGrid.PowerSwitchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:base="clr-namespace:AtomicTorch.GameEngine.Common.Client.MonoGame.UI;assembly=AtomicTorch.CBND.GameApi.WPF.Stubs"
    xmlns:data="clr-namespace:AtomicTorch.CBND.CoreMod.UI.Controls.Game.WorldObjects.PowerGrid.Data"
    xmlns:core="clr-namespace:AtomicTorch.CBND.CoreMod.UI.Controls.Core"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300"
    d:DataContext="{d:DesignInstance data:ViewModelPowerSwitch, IsDesignTimeCreatable=True}"
    x:Name="UserControl"
    Visibility="{Binding Converter={StaticResource NullToVisibilityConverter}}"
    HorizontalAlignment="Right"
    VerticalAlignment="Top"
    Focusable="False"
    xmlns:loc="clr-namespace:AtomicTorch.CBND.CoreMod.UI"
    xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=AtomicTorch.CBND.GameApi.WPF.Stubs"
    Width="138">

    <Grid HorizontalAlignment="Stretch">
        <Grid.Resources>
            <Style x:Key="PathStyle" TargetType="Path">
                <Setter Property="Stroke" Value="Black" />
                <Setter Property="StrokeThickness" Value="1.5" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource CondensedFontFamily}" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="LineHeight" Value="12" />
                <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style TargetType="{x:Type core:FormattedTextBlock}">
                <Setter Property="FontFamily" Value="{StaticResource CondensedFontFamily}" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="LineHeight" Value="12" />
                <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
        </Grid.Resources>

        <core:WidgetPanel InnerGlowSize="7"
                          VisibilityBackgroundImage="Collapsed"
                          WidgetBackground="{StaticResource WindowBackgroundBrush}" />

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Text: Power control -->
            <TextBlock Grid.Row="0"
                       Text="{x:Static loc:CoreStrings.PowerSwitchControl_Title_PowerControl}"
                       FontWeight="Bold"
                       Foreground="{StaticResource BrushColor7}"
                       Margin="0,-1,0,5"
                       HorizontalAlignment="Center" />

            <StackPanel
                Grid.Row="1"
                Visibility="{Binding ViewModelPowerStateOverlay.IsPowerOn, Converter={StaticResource BoolToHiddenVisibilityConverter}}"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,0,0,2">
                <Rectangle Fill="{Binding ElectricityIcon, ElementName=UserControl}"
                           Width="20"
                           Height="20"
                           HorizontalAlignment="Center"
                           Stretch="Uniform"
                           UseLayoutRounding="True"
                           Margin="-3,0,0,0" />

                <TextBlock Text="{Binding PowerAmountText}"
                           Foreground="#FFFFEE00"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="12"
                           LineHeight="10"
                           FontWeight="Bold"
                           FontFamily="{StaticResource DigitsFontFamily}"
                           TextWrapping="NoWrap"
                           Margin="0,0,0,-3" />
            </StackPanel>

            <ContentControl Grid.Row="1"
                            Visibility="{Binding ViewModelPowerStateOverlay.IsPowerOn, Converter={StaticResource BoolToHiddenVisibilityConverter}, ConverterParameter=Reverse}">
                <StackPanel
                    Visibility="{Binding ViewModelPowerStateOverlay.IsPowerOutage, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Reverse}"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,2">
                    <Rectangle Fill="{Binding ElectricityIcon, ElementName=UserControl}"
                               Width="20"
                               Height="20"
                               HorizontalAlignment="Center"
                               Stretch="Uniform"
                               UseLayoutRounding="True"
                               Opacity="0.7" />
                </StackPanel>
            </ContentControl>

            <Grid Grid.Row="1"
                  Visibility="{Binding ViewModelPowerStateOverlay.IsPowerOutage, Converter={StaticResource BoolToVisibilityConverter}}"
                  HorizontalAlignment="Center"
                  Width="28"
                  Height="28"
                  Margin="-4,-6,-4,-2">
                <Grid.LayoutTransform>
                    <ScaleTransform CenterX="0.5" ScaleX="-1" />
                </Grid.LayoutTransform>

                <Path Data="{StaticResource IconGeometryPathPowerOutage}"
                      Style="{StaticResource PathStyle}"
                      Fill="#FFFF4400"
                      Width="28"
                      Height="28" />
            </Grid>

