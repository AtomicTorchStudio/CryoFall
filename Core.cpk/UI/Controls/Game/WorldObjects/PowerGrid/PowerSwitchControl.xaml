                </Grid.Resources>
                <Grid.LayoutTransform>
                    <ScaleTransform CenterX="0.5" ScaleX="-1" />
                </Grid.LayoutTransform>

                <Button Visibility="{Binding IsPowerOn, Converter={StaticResource BoolToVisibilityConverter}}"
                        Command="{Binding CommandPowerOff}"
                        Padding="4,2"
                        MinWidth="10"
                        MinHeight="10"
                        Focusable="False"
                        base:ToolTipServiceExtend.ToolTip="{x:Static loc:CoreStrings.PowerSwitchControl_Button_DisconnectFromPowerGrid}">
                    <Border Background="Transparent">
                        <Path Data="{StaticResource IconGeometryPathSwitchOn}"
                              Style="{StaticResource PathStyle}"
                              Fill="{StaticResource BrushElectricity}"
                              Width="56" />
                    </Border>
                </Button>

                <Button
                    Visibility="{Binding IsPowerOn, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Reverse}"
                    Command="{Binding CommandPowerOn}"
                    Padding="4,2"
                    MinWidth="10"
                    MinHeight="10"
                    Focusable="False"
                    base:ToolTipServiceExtend.ToolTip="{x:Static loc:CoreStrings.PowerSwitchControl_Button_ConnectFromPowerGrid}">
                    <Border Background="Transparent">
                        <Path Data="{StaticResource IconGeometryPathSwitchOff}"
                              Style="{StaticResource PathStyle}"
                              Fill="#FFDDDDDD"
                              Width="56" />
                    </Border>
                </Button>
            </Grid>

            <core:FormattedTextBlock Grid.Row="4"
                                     Content="{Binding CurrentPowerModeExplanationText}"
                                     Margin="0,5" />

            <!-- Power grid level -->
            <Grid Grid.Row="5"
                  Margin="0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="{x:Static loc:CoreStrings.PowerSwitchControl_Title_PowerGridLevel}"
                           Foreground="{StaticResource BrushColor7}"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,2" />

                <core:ValueBarControl
                    Grid.Row="1"
                    Value="{Binding PowerGridChargePercent}"
                    MaxValue="100"
                    Background="Transparent"
                    BorderBrush="{StaticResource BrushElectricityDarker}"
                    BorderThickness="1"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    MinWidth="120"
                    Height="13"
                    Padding="1"
                    IsDisplayTooltip="False"
                    IsDisplayLabel="True"
                    IsDisplayPercents="True">
                    <core:ValueBarControl.Template>
                        <ControlTemplate TargetType="{x:Type core:ValueBarControl}">
                            <Grid x:Name="LayoutRoot">
                                <Border x:Name="Border"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="2" />
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="Left" />
                                <TextBlock x:Name="TextBlockValueDisplay"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Text="100%"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           FontFamily="{StaticResource DigitsFontFamily}"
                                           noesis:Text.Stroke="#AA000000"
                                           noesis:Text.StrokeThickness="1.5"
                                           Margin="0,-0.25,0,0" />
                            </Grid>
                        </ControlTemplate>
                    </core:ValueBarControl.Template>
                    <Border Background="{StaticResource BrushElectricityDarker}" CornerRadius="1" />
                </core:ValueBarControl>
            </Grid>

            <Grid Grid.Row="6"
                  Margin="0,5,0,0"
                  HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Power level thresholds -->
                <TextBlock Grid.Row="0"
                           Text="{x:Static loc:CoreStrings.PowerSwitchControl_Title_PowerLevelThresholds_Title}"
                           FontWeight="Bold"
                           Foreground="{StaticResource BrushColor7}" />

                <Grid Grid.Row="1"
                      HorizontalAlignment="Center"
                      Margin="0,1,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Startup -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="{x:Static loc:CoreStrings.PowerSwitchControl_Title_PowerLevelThresholds_Startup}" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Text="{Binding ThresholdStartupPercentsText}"
                               FontWeight="Bold" />

                    <!-- Shutdown -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="{x:Static loc:CoreStrings.PowerSwitchControl_Title_PowerLevelThresholds_Shutdown}" />
                    <TextBlock Grid.Row="2"
                               Grid.Column="2"
                               Text="{Binding ThresholdShutdownPercentsText}"
                               FontWeight="Bold" />
                </Grid>

                <Button Grid.Row="2"
                        Grid.Column="0"
                        Content="{x:Static loc:CoreStrings.Button_Configure}"
                        Command="{Binding CommandConfigureThresholds}"
                        FontSize="12"
                        Padding="4,2"
                        Margin="0,5,0,0"
                        MinWidth="10"
                        MinHeight="10"
                        HorizontalAlignment="Center"
                        Focusable="False" />
            </Grid>
        </Grid>
    </Grid>

</base:BaseUserControl>