            <hud:HUDButton.BrushNormal>
                <ImageBrush ImageSource="/UI/Images/Icons/icon_dismount_vehicle.png" />
            </hud:HUDButton.BrushNormal>
            <!-- Never used because it's not an actual menu - it's just a button -->
